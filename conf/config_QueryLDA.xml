<?xml version="1.0" encoding="UTF-8"?>
<CONFIG>
	<TASK ID="1">
		<LANGUAGE>english</LANGUAGE>
		<INPUT_PATH>doc</INPUT_PATH>
		<OUTPUT_PATH>doc/output</OUTPUT_PATH>
		<MULTITHREADING>false</MULTITHREADING>		
		<PROCESS>
			<OPTION NAME="CorpusIdToSummarize">all</OPTION>
			<OPTION NAME="ReadStopWords">true</OPTION>
			<INDEX_BUILDER NAME="LDA.QueryLDA">
				<OPTION NAME="K">20</OPTION>
				<OPTION NAME="Alpha">0.2</OPTION>
				<OPTION NAME="Beta">0.1</OPTION>
			</INDEX_BUILDER>
			<CARACTERISTIC_BUILDER NAME="vector.MeanVectorSentence">
			</CARACTERISTIC_BUILDER>
			<SCORING_METHOD NAME="QuerySimilarity">
				<OPTION NAME="SimilarityMethod">CosineSimilarity</OPTION>
			</SCORING_METHOD>
			<SUMMARIZE_METHOD NAME="BestIsBetter">
				<OPTION NAME="CharLimitBoolean">true</OPTION>
				<OPTION NAME="Size">100</OPTION>
			</SUMMARIZE_METHOD>
		</PROCESS>
		<ROUGE_EVALUATION>
			<ROUGE-MEASURE>ROUGE-1	ROUGE-2	ROUGE-SU4</ROUGE-MEASURE>
			<ROUGE-PATH>lib/ROUGE-1.5.5/RELEASE-1.5.5</ROUGE-PATH>
			<MODEL-ROOT>models</MODEL-ROOT>
			<PEER-ROOT>systems</PEER-ROOT>
		</ROUGE_EVALUATION>
	</TASK>
</CONFIG>
