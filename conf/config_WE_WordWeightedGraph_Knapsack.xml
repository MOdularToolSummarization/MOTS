<?xml version="1.0" encoding="UTF-8"?>
<CONFIG>
        <TASK ID="1">
                <LANGUAGE>english</LANGUAGE>
                <INPUT_PATH>doc</INPUT_PATH>
                <OUTPUT_PATH>doc/output</OUTPUT_PATH>
                <MULTITHREADING>false</MULTITHREADING>
                <PREPROCESS NAME="GenerateTextModel">
                        <OPTION NAME="StanfordNLP">true</OPTION>
                        <OPTION NAME="StopWordListFile">/home/$CORPUS_DATA/stopwords/englishStopWords.txt</OPTION>
                        <OPTION NAME="PropStanfordNLP">tokenize, ssplit</OPTION>
                </PREPROCESS>
                <PROCESS>
                        <OPTION NAME="CorpusIdToSummarize">all</OPTION>
                        <OPTION NAME="ReadStopWords">false</OPTION>
			<INDEX_BUILDER NAME="wordEmbeddings.WordToVec">
                                <OPTION NAME="ModelPath">/home/$CORPUS_DATA/wikipedia/enwiki-20171001-model.bin</OPTION>
                        </INDEX_BUILDER>
                        <CARACTERISTIC_BUILDER NAME="graphBased.SimilarityGraphOfWordsBuilder">
                                <OPTION NAME="DumpingParameter">0.15</OPTION>
                                <OPTION NAME="SimilarityThreshold">0.2</OPTION>
                                <OPTION NAME="SimilarityMethod">CosineSimilarity</OPTION> 		
                        </CARACTERISTIC_BUILDER>
			<SUMMARIZE_METHOD NAME="Knapsack">
				<OPTION NAME="Size">100</OPTION>
				<OPTION NAME="ScoreMethod">SumWeigthScorer</OPTION>
				<OPTION NAME="SimilarityMethod">CosineSimilarity</OPTION>
				<OPTION NAME="Lambda">0.7</OPTION>
			</SUMMARIZE_METHOD>
	               </PROCESS>
                <ROUGE_EVALUATION>
                        <ROUGE-MEASURE>ROUGE-1  ROUGE-2 ROUGE-SU4</ROUGE-MEASURE>
                        <ROUGE-PATH>lib/ROUGE-1.5.5/RELEASE-1.5.5</ROUGE-PATH>
                        <MODEL-ROOT>models</MODEL-ROOT>
                        <PEER-ROOT>systems</PEER-ROOT>
                </ROUGE_EVALUATION>
        </TASK>
</CONFIG>

