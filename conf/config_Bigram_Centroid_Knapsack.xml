<?xml version="1.0" encoding="UTF-8"?>
<CONFIG>
	<TASK ID="1">
		<LANGUAGE>english</LANGUAGE>
		<INPUT_PATH>doc</INPUT_PATH>
		<OUTPUT_PATH>doc/output</OUTPUT_PATH>
		<MULTITHREADING>true</MULTITHREADING>		
		<PROCESS>
			<OPTION NAME="CorpusIdToSummarize">all</OPTION>
			<OPTION NAME="ReadStopWords">true</OPTION>
			<INDEX_BUILDER NAME="BasicIndexBuilder">
			</INDEX_BUILDER>
			<INDEX_BUILDER NAME="TF_IDF.BiGram_IDF">
			</INDEX_BUILDER>
			<CARACTERISTIC_BUILDER NAME="vector.query.BiGramCentroid">
				<OPTION NAME="NbMaxWordInCentroid">80</OPTION>
			</CARACTERISTIC_BUILDER>
			<SCORING_METHOD NAME="QuerySimilarity">
				<OPTION NAME="SimilarityMethod">JaccardSimilarity</OPTION>
			</SCORING_METHOD>
			<SUMMARIZE_METHOD NAME="Knapsack">
				<OPTION NAME="Size">200</OPTION>
				<OPTION NAME="ScoreMethod">SentenceBasedScorer</OPTION>
				<OPTION NAME="SimilarityMethod">JaccardSimilarity</OPTION>
				<OPTION NAME="Lambda">0.7</OPTION>
			</SUMMARIZE_METHOD>
		</PROCESS>
		<ROUGE_EVALUATION>
			<ROUGE-MEASURE>ROUGE-1	ROUGE-2	ROUGE-SU4</ROUGE-MEASURE>
			<ROUGE-PATH>lib/ROUGE-1.5.5/RELEASE-1.5.5</ROUGE-PATH>
			<MODEL-ROOT>models</MODEL-ROOT>
			<PEER-ROOT>systems</PEER-ROOT>
		</ROUGE_EVALUATION>
	</TASK>
</CONFIG>
